@{
    ViewBag.Title = "Buttons";
}
<div class="row-fluid">
    <div class="span12">
        <h1>Buttons Page</h1>
        <p>
            <a href="@Url.Action("Index")">@Html.BootstrapIcon(Icon.icon_arrow_left) Home</a>
        </p>
    </div>
</div>
<div class="row-fluid">
    <div class="span2">
        <h3>Link Buttons</h3>
        <ul>
            <li>@Html.BootstrapLinkButton("id1", "Home", "/Home", ButtonType.@default, ButtonSize.@default, Icon.icon_arrow_left, false)</li>
            <li>@Html.BootstrapLinkButton("id2", "Home", "/Home", ButtonType.danger, ButtonSize.@default, Icon.icon_arrow_left, true)</li>
            <li>@Html.BootstrapLinkButton("id3", "Home", "/Home", ButtonType.info, ButtonSize.@default, Icon.icon_arrow_left, true)</li>
            <li>@Html.BootstrapLinkButton("id4", "Home", "/Home", ButtonType.primary, ButtonSize.@default, Icon.icon_arrow_left, true)</li>
            <li>@Html.BootstrapLinkButton("id5", "Home", "/Home", ButtonType.success, ButtonSize.@default, Icon.icon_arrow_left, true)</li>
            <li>@Html.BootstrapLinkButton("id6", "Home", "/Home", ButtonType.warning, ButtonSize.@default, Icon.icon_arrow_left, true)</li>
        </ul>
    </div>
    <div class="span2">
        <h3>Buttons</h3>
        <ul>
            <li>@Html.BootstrapButton("id7", "Home", ButtonType.@default, ButtonSize.@default, false, Icon.icon_arrow_left, false)</li>
            <li>@Html.BootstrapButton("id8", "Home", ButtonType.danger, ButtonSize.@default, false, Icon.icon_arrow_left, true)</li>
            <li>@Html.BootstrapButton("id9", "Home", ButtonType.info, ButtonSize.@default, false, Icon.icon_arrow_left, true)</li>
            <li>@Html.BootstrapButton("id10", "Home", ButtonType.primary, ButtonSize.@default, false, Icon.icon_arrow_left, true)</li>
            <li>@Html.BootstrapButton("id11", "Home", ButtonType.success, ButtonSize.@default, false, Icon.icon_arrow_left, true)</li>
            <li>@Html.BootstrapButton("id12", "Home", ButtonType.warning, ButtonSize.@default, false, Icon.icon_arrow_left, true)</li>
        </ul>
    </div>
    <div class="span8">
        <h3>Form Submit Buttons</h3>
        <form class="form-horizontal">
            <fieldset>
                <p>Some Form Elements go here...</p>
                @using (Html.BootstrapFormButtonContainer())
                {
                    @Html.BootstrapSubmitButton("id13", "One", ButtonType.@default, ButtonSize.@default, false)
                    @Html.BootstrapSubmitButton("id14", "Two", ButtonType.@danger, ButtonSize.@default, false)
                    @Html.BootstrapButton("id15", "Three", ButtonType.primary, ButtonSize.@default, false, Icon.icon_check, true, true)
                }
            </fieldset>
        </form>
    </div>
</div>
